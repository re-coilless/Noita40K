<Entity name="Volkite" tags="custom_wand,energy_gun,volkite">
	<AbilityComponent
		sprite_file="mods/Noita40K/files/pics/guns_gfx/volkite.xml"
        ui_name="Volkite Caliver"
		add_these_child_actions="HD_POWER_PACK"
		drop_as_item_on_death="1"
		entity_count="1"
		entity_file=""
		mana_charge_speed="200"
		mana_max="250"
        max_amount_in_inventory="1"
        shooting_reduces_amount_in_inventory="0"
		fast_projectile="0"
		swim_propel_amount="0"
		throw_as_item="0"
		amount_in_inventory="1"
        cooldown_frames="0"
		use_gun_script="1"
		item_recoil_offset_coeff="1"
		item_recoil_rotation_coeff="0"
		never_reload="0"
		><gun_config
            shuffle_deck_when_empty="0"
            deck_capacity="1"
			actions_per_round="1"
            reload_time="0"
        ></gun_config>
        <gunaction_config
			speed_multiplier="1"
			spread_degrees="0"
            fire_rate_wait="0"
        ></gunaction_config>
    </AbilityComponent>
	
	<HotspotComponent
        _tags="shoot_pos"
        offset.x="9.5"
        offset.y="-0.5"
	></HotspotComponent>
	
	<LuaComponent
		_enabled="0"
		_tags="enabled_in_hand"
		script_enabled_changed="mods/Noita40K/files/scripts/trash_killer.lua"
		execute_every_n_frame="-1"
	></LuaComponent>
	
	<LuaComponent
		_tags="enabled_in_hand"
		script_source_file="mods/Noita40K/files/scripts/gun_controllers/volkite_controller.lua"
		execute_every_n_frame="1"
		vm_type="ONE_PER_COMPONENT_INSTANCE"
	></LuaComponent>
	
	<LuaComponent
		_enabled="0"
		_tags="enabled_in_hand"
		script_enabled_changed="mods/Noita40K/files/scripts/deprimer.lua"
		execute_every_n_frame="-1"
	></LuaComponent>
	
	<AudioLoopComponent
		_tags="enabled_in_hand,volkite_is_going"
		file="mods/Noita40K/files/sfx/40K.bank"
		event_name="projectiles/volkite/beam_loop"
		volume_autofade_speed="0.25"
	></AudioLoopComponent>
	
	<Base file="data/entities/base_item.xml" >
        <ItemComponent
            item_name="default_gun"
            remove_on_death="1"
            collect_nondefault_actions="1"
			preferred_inventory="QUICK" 
			is_frozen="0"
        ></ItemComponent>
    </Base>
	
	<VariableStorageComponent
		_tags="volkite_state"
		name="state"
		value_bool="0"
	></VariableStorageComponent>
	
	<VariableStorageComponent
		_tags="overheated"
		name="overheated"
		value_bool="0"
	></VariableStorageComponent>
	
	<VariableStorageComponent
		_tags="active"
		name="active"
		value_bool="0"
	></VariableStorageComponent>
	
	<VariableStorageComponent
		_tags="trash_tag"
		name="trash_tag"
		value_string="beam"
	></VariableStorageComponent>
	
	<VariableStorageComponent
		_tags="ammo_type"
		name="ammo_type"
		value_string="hd_power_pack"
	></VariableStorageComponent>
	
	<ManaReloaderComponent
        _tags="enabled_in_world,enabled_in_hand,enabled_in_inventory"
    ></ManaReloaderComponent>
</Entity>
