		value_string="ADAMANTIUM_CARBON_TEETH"
	></VariableStorageComponent>
	
	<VariableStorageComponent
		_tags="chainedge_state"
		name="state"
		value_bool="0"
	></VariableStorageComponent>
	
	<VariableStorageComponent
		_tags="trash_tag"
		name="trash_tag"
		value_string="beam_spot"
	></VariableStorageComponent>
	
	<VariableStorageComponent
		_tags="taunt_type"
		name="taunt_type"
		value_int="2"
	></VariableStorageComponent>
