<Entity name="Chainsword" tags="custom_wand,melee_gun,chainsword">
	<AbilityComponent
		sprite_file="mods/Noita40K/files/pics/guns_gfx/chainsword_passive.xml"
        ui_name="Chainsword"
		add_these_child_actions=""
		drop_as_item_on_death="1"
		entity_count="1"
		entity_file=""
		mana_charge_speed="1"
		mana_max="1"
        max_amount_in_inventory="1"
        shooting_reduces_amount_in_inventory="0"
		never_reload="1"
		fast_projectile="0"
		swim_propel_amount="0"
		throw_as_item="0"
		amount_in_inventory="1"
        cooldown_frames="0"
		use_gun_script="1"
		item_recoil_offset_coeff="0"
		item_recoil_rotation_coeff="-90"
		><gun_config
            shuffle_deck_when_empty="0"
            deck_capacity="0"
			actions_per_round="1"
            reload_time="0"
        ></gun_config>
        <gunaction_config
            fire_rate_wait="0"
