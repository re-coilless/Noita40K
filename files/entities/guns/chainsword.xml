	<!--
	<SpriteStainsComponent
		fade_stains_towards_srite_top="0"   
	></SpriteStainsComponent>
	-->
	
	<HotspotComponent
        _tags="shoot_pos"
        offset.x="2"
        offset.y="-3"
	></HotspotComponent>
	
	<LuaComponent
		_tags="enabled_in_world,enabled_in_inventory"
		execute_on_added="1"
        remove_after_executed="1"
		script_source_file="mods/Noita40K/files/scripts/perma_attacher.lua"
	></LuaComponent>
	
	<LuaComponent
		_enabled="0"
		_tags="enabled_in_hand"
		script_enabled_changed="mods/Noita40K/files/scripts/trash_killer.lua"
		execute_every_n_frame="-1"
	></LuaComponent>
	
	<LuaComponent
		_tags="enabled_in_hand"
		script_source_file="mods/Noita40K/files/scripts/gun_controllers/chainsword_controller.lua"
		execute_every_n_frame="1"
		vm_type="ONE_PER_COMPONENT_INSTANCE"
	></LuaComponent>
	
	<LuaComponent
		_enabled="0"
		_tags="enabled_in_hand"
		script_enabled_changed="mods/Noita40K/files/scripts/deprimer.lua"
		execute_every_n_frame="-1"
	></LuaComponent>
	
	<LuaComponent
		_tags="enabled_in_hand"
		script_source_file="mods/Noita40K/files/scripts/taunt_controller.lua"
		execute_every_n_frame="1"
	></LuaComponent>
	
	<AudioLoopComponent
		_tags="enabled_in_hand,chains_are_going"
		file="mods/Noita40K/files/sfx/40K.bank"
		event_name="guns/chainsword/active"
		volume_autofade_speed="0.25"
	></AudioLoopComponent>
	
	<AudioLoopComponent
		_tags="enabled_in_hand,slice_flesh"
		file="mods/Noita40K/files/sfx/40K.bank"
		event_name="guns/chainsword/slice_flesh"
		volume_autofade_speed="0.25"
	></AudioLoopComponent>
	
	<AudioLoopComponent
		_tags="enabled_in_hand,slice_armor"
		file="mods/Noita40K/files/sfx/40K.bank"
		event_name="guns/chainsword/slice_armor"
		volume_autofade_speed="0.25"
	></AudioLoopComponent>

	<Base file="data/entities/base_item.xml" >
        <ItemComponent
            item_name="default_gun"
            remove_on_death="1"
            collect_nondefault_actions="1" 
			preferred_inventory="QUICK" 
			is_frozen="0"
			ui_sprite="mods/Noita40K/files/pics/guns_gfx/chainsword_icon.png"
        ></ItemComponent>
		
		<SpriteComponent 
			image_file="mods/Noita40K/files/pics/guns_gfx/chainsword_passive.xml"
			rect_animation="0" 
			next_rect_animation="0" 
			offset_x="0"
			offset_y="0"
			z_index="0.95"
		></SpriteComponent>
    </Base>
	
	<VariableStorageComponent
		_tags="perma"
