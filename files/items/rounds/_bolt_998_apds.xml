			gravity_y="20" 
			air_friction="-2.0" 
			mass="1"
		></VelocityComponent>
	</Base>
	
	<ProjectileComponent 
		_enabled="1" 
		friendly_fire="1"
		lob_min="0.8"
		lob_max="1.1"
		speed_min="2500"
		speed_max="3000"
		damage_scaled_by_speed="1"
		direction_random_rad="0.003"
		on_death_explode="0"
		on_death_gfx_leave_sprite="1" 
		on_lifetime_out_explode="0"
		die_on_low_velocity="1"
		explosion_dont_damage_shooter="0"
		on_collision_die="0"
		ragdoll_force_multiplier="0.03"
		ragdoll_fx_on_collision="BLOOD_SPRAY"
		lifetime="400"
		ground_collision_fx="0"
		ground_penetration_coeff="7"
		velocity_sets_scale="1"
		velocity_sets_scale_coeff="0.6"
		camera_shake_when_shot="3.0"
		shoot_light_flash_radius="150"
		hit_particle_force_multiplier="0.1"
