			hole_image="data/temp/explosion_hole.png" 
			ray_energy="600000"
			max_durability_to_destroy="15"
			particle_effect="0" 
			physics_explosion_power.min="3.0"
			physics_explosion_power.max="5.0" 
			physics_throw_enabled="1"  
			shake_vegetation="1" 
			sparks_count_max="50" 
			sparks_count_min="30"
