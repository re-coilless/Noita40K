			material_sparks_count_max="2"
			material_sparks_count_min="0" 
			sparks_enabled="1"  
			light_enabled="0" 
			stains_enabled="1"
			stains_radius="18"
		></config_explosion>
	</ProjectileComponent>
  
	<SpriteComponent 
		_enabled="1" 
		alpha="1" 
		image_file="mods/Noita40K/files/pics/projectiles_gfx/bolt_50mm_AP_HE.xml" 
		fog_of_war_hole="1"
		next_rect_animation=""
		rect_animation="" 
		emissive="1"
		additive="1"
	></SpriteComponent>

	<SpriteComponent
		has_special_scale="1"
		special_scale_x="1"
		special_scale_y="1"
		alpha="0.5"
		image_file="data/particles/fog_of_war_hole_64.xml"
		smooth_filtering="1"
		fog_of_war_hole="1"
	></SpriteComponent>

	<LightComponent
		_enabled="1"
		radius="128"
		r="239"
		g="58"
		b="12"
	></LightComponent>
	
	<ParticleEmitterComponent
		emitted_material_name="fire"
		emit_real_particles="1"
		direction_random_deg="5"
		x_vel_min="-30"
		x_vel_max="-40"
		y_vel_min="0"
