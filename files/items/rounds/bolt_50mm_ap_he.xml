		bounces_left="0"
		damage="5"
		muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_launcher_large.xml"
		knockback_force="5.0"
		><config_explosion
			audio_enabled="0"
			never_cache="1" 
			damage="2"
			load_this_entity="mods/Noita40K/files/entities/emitters/explosion_bolt_50mm.xml"
