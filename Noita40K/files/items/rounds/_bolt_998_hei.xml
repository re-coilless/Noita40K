<Entity name="$projectile_default" >
	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="20" 
			air_friction="-2.0" 
			mass="0.5"
		></VelocityComponent>
	</Base>

	<ProjectileComponent 
		_enabled="1" 
		friendly_fire="1"
		lob_min="0.8"
		lob_max="1.1"
		speed_min="2000"
		speed_max="2500"
		damage_scaled_by_speed="1"
		direction_random_rad="0.003"
		on_death_explode="1"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="1"
		explosion_dont_damage_shooter="0"
		on_collision_die="1"
		ragdoll_force_multiplier="0.03"
		ragdoll_fx_on_collision="BLOOD_SPRAY"
		lifetime="200"
		ground_penetration_coeff="0"
		velocity_sets_scale="1"
		velocity_sets_scale_coeff="0.5"
		camera_shake_when_shot="2.0"
		shoot_light_flash_radius="128"
		hit_particle_force_multiplier="0.1"
		create_shell_casing="0"
		shell_casing_offset.x="-7"
		shell_casing_offset.y="0"
		bounces_left="0"
		damage="1.5"
		muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_large.xml"
		knockback_force="2.5"
		><config_explosion
			never_cache="1" 
			damage="0"
			camera_shake="0.5"
			explosion_radius="1.5" 
			explosion_sprite_lifetime="0" 
			explosion_sprite=""
			hole_destroy_liquid="0" 
			hole_enabled="1" 
			hole_image="data/temp/explosion_hole.png" 
			ray_energy="200000"
			max_durability_to_destroy="10"
			particle_effect="0" 
			physics_explosion_power.min="0.5"
			physics_explosion_power.max="1.5" 
			physics_throw_enabled="1"  
			shake_vegetation="1" 
			sparks_count_max="15" 
			sparks_count_min="10"
			create_cell_material="promethium"
			create_cell_probability="90"
			material_sparks_enabled="0"
			material_sparks_count_max="20"
			material_sparks_count_min="15" 
			sparks_enabled="1"  
			light_enabled="0" 
			stains_enabled="1"
			stains_radius="5"
		></config_explosion>
	</ProjectileComponent>
	
	<HitEffectComponent 
        effect_hit="LOAD_UNIQUE_CHILD_ENTITY"
        value_string="mods/Noita40K/files/entities/status_effects/effect_promethium_fire_igniter.xml"
	></HitEffectComponent >
	
	<SpriteComponent 
		_enabled="1" 
		alpha="1" 
		image_file="mods/Noita40K/files/pics/projectiles_gfx/bolt_75_HEI.xml" 
		fog_of_war_hole="1"
		next_rect_animation=""
		rect_animation="" 
		emissive="1"
		additive="1"
	></SpriteComponent>
	
	<SpriteComponent
		has_special_scale="1"
		special_scale_x="1"
		special_scale_y="1"
		alpha="0.5"
		image_file="data/particles/fog_of_war_hole.xml"
		smooth_filtering="1"
		fog_of_war_hole="1"
	></SpriteComponent>

	<LightComponent
		_enabled="1"
		radius="64"
		r="255"
		g="100"
		b="10"
	></LightComponent>
	
	<MagicConvertMaterialComponent
		kill_when_finished="0"
		steps_per_frame="100"
		is_circle="0"
		radius="2"
		loop="1"
		temperature_reaction_temp="1000"
		ignite_materials="1"
    ></MagicConvertMaterialComponent>
	
	<AudioComponent
		file="mods/Noita40K/files/40K.bank"
		event_root="projectiles/bolt_75" 
		set_latest_event_position="1"
	></AudioComponent>

	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.snd"
		event_name="projectiles/rocket_passby"
		set_speed_parameter="1"
		auto_play="1"
	></AudioLoopComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/Noita40K/files/entities/projectiles/bolt_75_HEI.xml"
	></VariableStorageComponent>
</Entity>